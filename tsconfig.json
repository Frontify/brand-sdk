{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["es2021"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "types": ["jest", "node"]
    },
    "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
