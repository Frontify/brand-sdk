{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["es6", "es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "types": ["jest", "node"]
    },
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}
