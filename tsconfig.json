{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["es2021"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "types": ["node"]
    },
    "include": ["./src/**/*", "package.json", "rollup.config.ts"],
    "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
