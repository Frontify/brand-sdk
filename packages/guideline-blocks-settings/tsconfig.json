{
    "compilerOptions": {
        "baseUrl": ".",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "esnext"],
        "resolveJsonModule": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "noEmit": true,
        "types": ["cypress", "node", "cypress-real-events"]
    },
    "include": ["src/**/*", "vite.config.ts", "tailwind.config.js", "setupTests.ts", "postcss.config.js"],
    "exclude": ["node_modules", "dist"]
}
