{
    "name": "@frontify/app-bridge",
    "type": "module",
    "version": "4.0.0-alpha.34",
    "description": "Package to establish communication between Frontify and marketplace apps",
    "author": "Frontify Developers <developers@frontify.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/Frontify/brand-sdk",
        "directory": "packages/app-bridge"
    },
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.js"
        },
        "./testing": {
            "types": "./dist/testing.d.ts",
            "require": "./dist/testing.js",
            "import": "./dist/testing.js"
        },
        "./upload-worker": "./dist/upload.worker.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "package.json.d.ts"
    ],
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "ts-json-as-const ./package.json && vite build",
        "dev": "vite build --watch",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "react": "^18",
        "react-dom": "^18",
        "sinon": "^15 || ^16 || ^17"
    },
    "dependencies": {
        "immer": "^10.0.4",
        "lodash-es": "^4.17.21",
        "mitt": "^3.0.1",
        "type-fest": "^4.15.0"
    },
    "devDependencies": {
        "@frontify/eslint-config-react": "^0.17.6",
        "@testing-library/react": "^14.3.0",
        "@types/lodash-es": "^4.17.12",
        "@types/react": "^18.2.75",
        "@types/react-dom": "^18.2.24",
        "@types/sinon": "^17.0.3",
        "@vitest/coverage-v8": "^1.4.0",
        "@vitest/ui": "^1.4.0",
        "eslint": "^8.57.0",
        "eslint-plugin-notice": "^0.9.10",
        "happy-dom": "^13.10.1",
        "mitt": "^3.0.1",
        "msw": "^1.3.3",
        "prettier": "^3.2.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sinon": "^17.0.1",
        "ts-json-as-const": "^1.0.7",
        "typescript": "^5.4.4",
        "vite": "^5.2.10",
        "vite-plugin-dts": "^3.8.1",
        "vite-plugin-static-copy": "^1.0.2",
        "vitest": "^1.4.0"
    }
}
