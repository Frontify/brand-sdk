{
    "name": "@frontify/app-bridge",
    "author": "Frontify Developers <developers@frontify.com>",
    "version": "3.0.0-beta.30",
    "description": "Package to establish communication between Frontify and marketplace apps",
    "repository": {
        "type": "git",
        "url": "https://github.com/Frontify/brand-sdk",
        "directory": "packages/app-bridge"
    },
    "sideEffects": false,
    "main": "dist/index.umd.js",
    "unpkg": "dist/index.umd.js",
    "jsdelivr": "dist/index.umd.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        },
        "./upload-worker": "./dist/upload.worker.js"
    },
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "lodash-es": "4.17.21",
        "mitt": "3.0.0",
        "sinon": "14.0.2",
        "type-fest": "3.2.0"
    },
    "devDependencies": {
        "@frontify/eslint-config-react": "0.15.5",
        "@testing-library/react": "12.1.5",
        "@testing-library/react-hooks": "8.0.1",
        "@types/lodash-es": "4.17.6",
        "@types/react": "17.0.52",
        "@types/sinon": "10.0.13",
        "@vitest/coverage-c8": "0.25.3",
        "@vitest/ui": "0.25.3",
        "eslint": "8.28.0",
        "eslint-plugin-notice": "^0.9.10",
        "happy-dom": "7.7.0",
        "husky": "8.0.2",
        "mitt": "3.0.0",
        "msw": "0.48.2",
        "prettier": "2.8.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "rollup-plugin-copy": "3.4.0",
        "typescript": "4.8.4",
        "vite": "3.2.4",
        "vite-plugin-dts": "1.7.1",
        "vitest": "0.25.3"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    }
}
