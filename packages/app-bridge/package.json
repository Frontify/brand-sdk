{
    "name": "@frontify/app-bridge",
    "author": "Frontify Developers <developers@frontify.com>",
    "version": "3.0.0-beta.100",
    "description": "Package to establish communication between Frontify and marketplace apps",
    "repository": {
        "type": "git",
        "url": "https://github.com/Frontify/brand-sdk",
        "directory": "packages/app-bridge"
    },
    "sideEffects": false,
    "main": "dist/index.umd.js",
    "unpkg": "dist/index.umd.js",
    "jsdelivr": "dist/index.umd.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        },
        "./upload-worker": "./dist/upload.worker.js"
    },
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "immer": "^10.0.2",
        "lodash-es": "^4.17.21",
        "mitt": "^3.0.1",
        "type-fest": "^4.3.1"
    },
    "devDependencies": {
        "@frontify/eslint-config-react": "0.16.1",
        "@testing-library/react": "14.0.0",
        "@types/lodash-es": "4.17.9",
        "@types/react": "18.2.21",
        "@types/react-dom": "18.2.7",
        "@types/sinon": "10.0.16",
        "@vitest/coverage-v8": "0.34.3",
        "@vitest/ui": "0.34.3",
        "eslint": "8.48.0",
        "eslint-plugin-notice": "^0.9.10",
        "happy-dom": "12.9.1",
        "mitt": "3.0.1",
        "msw": "1.3.0",
        "prettier": "3.0.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "sinon": "15.2.0",
        "typescript": "5.2.2",
        "vite": "4.4.9",
        "vite-plugin-dts": "3.6.1",
        "vite-plugin-static-copy": "0.17.0",
        "vitest": "0.34.3"
    },
    "peerDependencies": {
        "react": "^18",
        "react-dom": "^18",
        "sinon": "^15"
    }
}
