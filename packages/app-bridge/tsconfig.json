{
    "compilerOptions": {
        "target": "es6",
        "module": "es2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["es2020", "dom"],
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "declarationDir": "./dist",
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "types": ["vite/client"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./dist/**/*"]
}
