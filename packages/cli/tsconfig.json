{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2020"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020"
    },
    "exclude": ["dist", "node_modules", "tests/files"],
    "include": ["eslint.config.mjs", "src", "package.json", "tests", "vite.config.ts"]
}
