{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2020"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020"
    },
    "include": ["src/**/*", "package.json", "tests/**/*"],
    "exclude": ["dist", "node_modules"]
}
