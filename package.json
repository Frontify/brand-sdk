{
  "name": "frontify-block-cli",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "bin": {
    "frontify-block-cli": "./dist/main.js"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "esbuild src/main.ts --platform=node --bundle --external:esbuild --external:fsevents --outfile=dist/main.js",
    "start": "node -r ts-node/register ./src/main.ts",
    "dev": "nodemon",
    "lint": "eslint '*/**/*.ts' --quiet --fix",
    "lint:no-fix": "eslint '*/**/*.ts'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "husky install"
  },
  "author": "Samuel Alev <samuel.alev@frontify.com>",
  "dependencies": {
    "archiver": "^5.2.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.0",
    "esbuild": "^0.8.32",
    "fastify": "^3.9.2",
    "fastify-cors": "^5.1.0",
    "fastify-static": "^3.3.1",
    "fastify-websocket": "^2.0.11",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@types/archiver": "^5.1.0",
    "@types/express": "^4.17.11",
    "@types/figlet": "^1.2.1",
    "@types/lodash": "^4.14.167",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.20",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.6",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  }
}
