{
    "name": "frontify-cli",
    "version": "1.0.2",
    "main": "./dist/main.js",
    "private": false,
    "bin": {
        "frontify-cli": "./dist/main.js"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=15"
    },
    "scripts": {
        "build": "esbuild src/main.ts --platform=node --bundle --external:esbuild '--define:process.env.NODE_ENV=\"production\"' --external:fsevents --outfile=dist/main.js",
        "start": "node -r ts-node/register ./src/main.ts",
        "test": "jest",
        "format": "prettier --write 'src/**/*.ts'",
        "lint": "eslint 'src/**/*.ts' --quiet --fix",
        "lint:no-fix": "eslint '*/**/*.ts'",
        "prepublishOnly": "npm test && npm run lint",
        "prepare": "npm run build"
    },
    "author": "Frontify Developers <developers@frontify.com>",
    "dependencies": {
        "archiver": "^5.3.0",
        "chalk": "^4.1.1",
        "chokidar": "^3.5.1",
        "conf": "^10.0.1",
        "esbuild": "^0.12.5",
        "fast-glob": "^3.2.5",
        "fastify": "^3.17.0",
        "fastify-cors": "^6.0.1",
        "fastify-static": "^4.2.2",
        "fastify-websocket": "^3.2.0",
        "minimist": "^1.2.5",
        "node-fetch": "^2.6.1",
        "open": "^8.2.0",
        "react": "^17.0.1"
    },
    "devDependencies": {
        "@frontify/eslint-config-typescript": "^0.5.0",
        "@types/archiver": "^5.1.0",
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.23",
        "@types/lodash": "^4.14.170",
        "@types/minimist": "^1.2.1",
        "@types/mock-fs": "^4.13.0",
        "@types/node": "^15.9.0",
        "@types/node-fetch": "^2.5.10",
        "@types/ws": "^7.4.4",
        "eslint": "^7.27.0",
        "jest": "^27.0.4",
        "mock-fs": "^5.0.0",
        "nock": "^13.1.0",
        "prettier": "^2.3.0",
        "ts-jest": "^27.0.2",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.2"
    }
}
