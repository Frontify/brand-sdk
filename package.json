{
    "name": "root",
    "private": true,
    "scripts": {
        "build": "pnpm build:app-bridge && pnpm build:sidebar-settings && pnpm build:guideline-blocks && pnpm build:cli",
        "build:app-bridge": "pnpm --stream --filter {packages/app-bridge} build",
        "build:sidebar-settings": "pnpm --stream --filter {packages/sidebar-settings} build",
        "build:guideline-blocks": "pnpm --stream --filter {packages/guideline-blocks} build",
        "build:cli": "pnpm --stream --filter {packages/cli} build",
        "lint": "pnpm --stream --filter {packages/**} --parallel lint",
        "lint:fix": "pnpm --stream --filter {packages/**} --parallel lint:fix",
        "test": "pnpm --stream --filter {packages/**} --parallel test",
        "test:components": "cypress run --component",
        "test:components:browser": "cypress open --component",
        "typecheck": "pnpm --stream --filter {packages/**} --parallel typecheck",
        "ci:publish": "pnpm build && pnpm publish -r --access public"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.4.8",
        "@changesets/cli": "^2.26.1",
        "@cypress/vite-dev-server": "^4.0.1",
        "@frontify/fondue": "12.0.0-beta.282",
        "@vitejs/plugin-react": "^2.2.0",
        "cypress": "^12.9.0",
        "cypress-real-events": "^1.7.6",
        "glob": "^10.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.2.7",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4",
        "vite": "^4.3.2",
        "vitest": "^0.25.0"
    }
}
