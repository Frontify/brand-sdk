{
  "name": "frontify-block-cli",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "private": false,
  "bin": {
    "frontify-block-cli": "dist/main.js"
  },
  "engines": {
    "node": ">=15"
  },
  "scripts": {
    "build": "esbuild src/main.ts --platform=node --bundle --external:esbuild '--define:process.env.NODE_ENV=\"development\"' --external:fsevents --outfile=dist/main.js",
    "start": "node -r ts-node/register ./src/main.ts",
    "dev": "nodemon",
    "test": "jest",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' --quiet --fix",
    "lint:no-fix": "eslint '*/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "author": "Frontify <support@frontify.com>",
  "dependencies": {
    "archiver": "^5.2.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "conf": "^8.0.0",
    "esbuild": "^0.8.33",
    "fastify": "^3.10.1",
    "fastify-cors": "^5.1.0",
    "fastify-static": "^3.4.0",
    "fastify-websocket": "^2.1.0",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "node-fetch": "^2.6.1",
    "open": "^7.3.1",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@types/archiver": "^5.1.0",
    "@types/express": "^4.17.11",
    "@types/figlet": "^1.2.1",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/minimist": "^1.2.1",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^14.14.22",
    "@types/node-fetch": "^2.5.8",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "mock-fs": "^4.13.0",
    "nock": "^13.0.5",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
